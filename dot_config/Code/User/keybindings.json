[
  // terminal toggle
  { "key": "ctrl+`", "command": "workbench.action.terminal.toggleTerminal" },

  // quick switch between editor and terminal
  { "key": "ctrl+shift+`", "command": "workbench.action.terminal.new" },

  // zen mode
  { "key": "ctrl+shift+z", "command": "workbench.action.toggleZenMode" },

  // open settings JSON directly
  { "key": "cmd+shift+,", "command": "workbench.action.openSettingsJson" },

  // focus editor group when in terminal
  { "key": "ctrl+shift+e", "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus" }
]
